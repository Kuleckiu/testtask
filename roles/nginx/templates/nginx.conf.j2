server {
    listen 80;
    server_name _;
    location /images {
        alias /var/www/html/images; 
        autoindex on;                 
        autoindex_exact_size off;     
        autoindex_localtime on;       
        gzip on;                      
        gzip_types text/plain application/json;
        expires 1h;                   
    }
}
